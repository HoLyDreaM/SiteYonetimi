@model IReadOnlyList<SiteYonetim.Domain.Entities.SiteDocument>
@{
    ViewData["Title"] = "Evrak Arşivi";
    var siteId = (Guid)ViewBag.SiteId;
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Evrak Arşivi</h1>
    <div>
        <a asp-area="App" asp-controller="SiteDocuments" asp-action="Create" asp-route-siteId="@siteId" class="btn btn-primary"><i class="bi bi-plus-lg me-1"></i> Yeni Evrak</a>
        <a asp-area="App" asp-controller="Sites" asp-action="Index" class="btn btn-outline-secondary">Site Değiştir</a>
    </div>
</div>
@if (Model != null && Model.Count > 0)
{
    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Evrak Adı</th>
                        <th>Açıklama</th>
                        <th>Dosya</th>
                        <th width="180"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model)
                    {
                        <tr>
                            <td><strong>@d.Name</strong></td>
                            <td>@(d.Description ?? "-")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(d.FilePath))
                                {
                                    <a href="@d.FilePath" target="_blank" class="btn btn-sm btn-outline-secondary"><i class="bi bi-file-earmark me-1"></i>@(d.FileName ?? "Görüntüle")</a>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <a asp-area="App" asp-controller="SiteDocuments" asp-action="Edit" asp-route-id="@d.Id" asp-route-siteId="@siteId" class="btn btn-sm btn-outline-primary">Düzenle</a>
                                <form asp-area="App" asp-controller="SiteDocuments" asp-action="Delete" asp-route-id="@d.Id" asp-route-siteId="@siteId" method="post" class="d-inline" onsubmit="return confirm('Bu evrakı silmek istediğinize emin misiniz?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">Henüz evrak eklenmemiş. <a asp-area="App" asp-controller="SiteDocuments" asp-action="Create" asp-route-siteId="@siteId">İlk evrakı ekleyin</a>. Sözleşme, belge vb. PDF, Word veya Excel dosyalarını yükleyebilirsiniz.</div>
}
