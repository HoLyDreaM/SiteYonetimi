@model IReadOnlyList<SiteYonetim.Domain.Entities.Apartment>
@{
    ViewData["Title"] = "Daireler";
    var siteId = (Guid)ViewBag.SiteId;
    var defaultDues = ViewBag.DefaultMonthlyDues as decimal?;
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Daireler</h1>
    <div>
        <a asp-area="App" asp-controller="Apartments" asp-action="Create" asp-route-siteId="@siteId" class="btn btn-primary"><i class="bi bi-plus-lg me-1"></i> Yeni Daire</a>
        <a asp-area="App" asp-controller="Sites" asp-action="Index" class="btn btn-outline-secondary">Site Değiştir</a>
    </div>
</div>
@if (Model != null && Model.Count > 0)
{
    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Blok / Bina</th>
                        <th>Daire No</th>
                        <th>Kat</th>
                        <th>Aidat Bilgisi</th>
                        <th>Ev Sahibi / Kiracı</th>
                        <th width="100"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in Model)
                    {
                        <tr>
                            <td>@a.BlockOrBuildingName</td>
                            <td><strong>@a.ApartmentNumber</strong></td>
                            <td>@(a.Floor?.ToString() ?? "-")</td>
                            <td>
                                @{
                                    var aidat = a.MonthlyDuesAmount ?? (defaultDues.HasValue ? defaultDues.Value * a.ShareRate : (decimal?)null);
                                    @(aidat.HasValue ? $"{aidat.Value:N2} ₺" : "-")
                                }
                            </td>
                            <td>
                                @if (a.OccupancyType == SiteYonetim.Domain.Entities.ApartmentOccupancyType.TenantOccupied)
                                {
                                    <span class="text-muted">Ev Sahibi: @(a.OwnerName ?? "-")</span><br />
                                    <strong>Kiracı: @(a.TenantName ?? "-")</strong>
                                }
                                else
                                {
                                    @(a.OwnerName ?? "-")
                                }
                            </td>
                            <td>
                                <a asp-area="App" asp-controller="Apartments" asp-action="Edit" asp-route-id="@a.Id" asp-route-siteId="@siteId" class="btn btn-sm btn-outline-primary">Düzenle</a>
                                <form asp-area="App" asp-controller="Apartments" asp-action="Delete" asp-route-id="@a.Id" asp-route-siteId="@siteId" method="post" class="d-inline" onsubmit="return confirm('Bu daireyi silmek istediğinize emin misiniz?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">Bu sitede henüz daire eklenmemiş. <a asp-area="App" asp-controller="Apartments" asp-action="Create" asp-route-siteId="@siteId">Yeni daire ekleyin</a>.</div>
}
