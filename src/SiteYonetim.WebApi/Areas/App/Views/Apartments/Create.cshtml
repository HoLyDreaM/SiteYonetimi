@model SiteYonetim.Domain.Entities.Apartment
@{
    ViewData["Title"] = "Yeni Daire";
    var siteId = (Guid)ViewBag.SiteId;
    var siteName = ViewBag.SiteName as string ?? "";
}
<h1 class="h3 mb-4">Yeni Daire - @siteName</h1>
<form asp-area="App" asp-controller="Apartments" asp-action="Create" method="post">
    <input type="hidden" asp-for="SiteId" />
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="BlockOrBuildingName" class="form-label">Blok / Bina Adı</label>
                    <input asp-for="BlockOrBuildingName" class="form-control" placeholder="A Blok" />
                </div>
                <div class="col-md-6">
                    <label asp-for="ApartmentNumber" class="form-label">Daire No *</label>
                    <input asp-for="ApartmentNumber" class="form-control" placeholder="1, 2-A" />
                    <span asp-validation-for="ApartmentNumber" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Floor" class="form-label">Kat</label>
                    <input asp-for="Floor" type="number" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="ShareRate" class="form-label">Pay Oranı</label>
                    <input asp-for="ShareRate" type="number" step="0.0001" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="MonthlyDuesAmount" class="form-label">Aylık Aidat (₺)</label>
                    <input asp-for="MonthlyDuesAmount" type="number" step="0.01" class="form-control" />
                    <span class="form-text">Boş bırakılırsa site varsayılanı × pay oranı kullanılır.</span>
                </div>
                <div class="col-md-6">
                    <label asp-for="PaymentStartDay" class="form-label">Aidat Ödeme Başlangıç Günü</label>
                    <input asp-for="PaymentStartDay" type="number" min="1" max="28" class="form-control" placeholder="Örn: 1" />
                    <span class="form-text">Örn: 1 = ayın 1'i. Boş bırakılırsa site varsayılanı kullanılır.</span>
                </div>
                <div class="col-md-6">
                    <label asp-for="PaymentEndDay" class="form-label">Aidat Ödeme Bitiş Günü</label>
                    <input asp-for="PaymentEndDay" type="number" min="1" max="28" class="form-control" placeholder="Örn: 20" />
                    <span class="form-text">Örn: 20 = ayın 20'si. Aralık: 01.02-20.02 gibi.</span>
                </div>
                <div class="col-12">
                    <label asp-for="OccupancyType" class="form-label">Kim Oturuyor?</label>
                    <select asp-for="OccupancyType" class="form-select" id="occupancyType">
                        <option value="0">Ev sahibi (malik) oturuyor</option>
                        <option value="1">Kiracı oturuyor</option>
                    </select>
                    <span class="form-text">Kiracı seçilirse önce ev sahibi bilgisi, sonra kiracı bilgisi girilmelidir.</span>
                </div>
                <div class="col-12"><hr class="my-2" /><h6>Ev Sahibi (Malik) Bilgileri</h6></div>
                <div class="col-md-6">
                    <label asp-for="OwnerName" class="form-label">Ev Sahibi Adı *</label>
                    <input asp-for="OwnerName" class="form-control" placeholder="Malik adı soyadı" />
                    <span asp-validation-for="OwnerName" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="OwnerPhone" class="form-label">Ev Sahibi Telefon</label>
                    <input asp-for="OwnerPhone" class="form-control" />
                </div>
                <div class="col-12 kiracı-alanlar" style="display:none"><hr class="my-2" /><h6>Kiracı Bilgileri</h6></div>
                <div class="col-md-6 kiracı-alanlar" style="display:none">
                    <label asp-for="TenantName" class="form-label">Kiracı Adı</label>
                    <input asp-for="TenantName" class="form-control" placeholder="Kiracı adı soyadı" />
                </div>
                <div class="col-md-6 kiracı-alanlar" style="display:none">
                    <label asp-for="TenantPhone" class="form-label">Kiracı Telefon</label>
                    <input asp-for="TenantPhone" class="form-control" />
                </div>
            </div>
        </div>
        <div class="card-footer bg-transparent border-0">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a asp-area="App" asp-controller="Apartments" asp-action="Index" asp-route-siteId="@siteId" class="btn btn-secondary">İptal</a>
        </div>
    </div>
</form>
@section Scripts {
<script>
document.getElementById('occupancyType').addEventListener('change', function() {
    var kiracı = this.value === '1';
    document.querySelectorAll('.kiracı-alanlar').forEach(function(el) { el.style.display = kiracı ? 'block' : 'none'; });
});
document.getElementById('occupancyType').dispatchEvent(new Event('change'));
</script>
}
