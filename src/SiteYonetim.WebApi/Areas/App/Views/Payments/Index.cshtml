@model IReadOnlyList<SiteYonetim.Domain.Entities.Payment>
@{
    ViewData["Title"] = "Tahsilatlar";
    var siteId = (Guid)ViewBag.SiteId;
    var year = (int)ViewBag.Year;
    var month = (int)ViewBag.Month;
    var siteName = ViewBag.SiteName as string ?? "";
    var monthNames = new[] { "", "Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık" };
}
<div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
    <h1 class="h3 mb-0">Tahsilatlar - @year @monthNames[month] @(string.IsNullOrEmpty(siteName) ? "" : $"- {siteName}")</h1>
    <div class="d-flex align-items-center gap-2 flex-wrap">
        <form asp-action="Index" method="get" class="d-flex gap-2 align-items-center">
            <input type="hidden" name="siteId" value="@siteId" />
            <select name="year" class="form-select form-select-sm" style="width:auto" onchange="this.form.submit()">
                @for (var y = DateTime.Today.Year; y >= DateTime.Today.Year - 5; y--)
                {
                    <option value="@y" selected="@(y == year)">@y</option>
                }
            </select>
            <select name="month" class="form-select form-select-sm" style="width:auto" onchange="this.form.submit()">
                @for (var m = 1; m <= 12; m++)
                {
                    <option value="@m" selected="@(m == month)">@monthNames[m]</option>
                }
            </select>
        </form>
        <a asp-controller="Sites" asp-action="Index" class="btn btn-outline-secondary">Site Değiştir</a>
    </div>
</div>
@if (Model != null && Model.Count > 0)
{
    <form id="voidPaymentForm" method="post" asp-action="Delete" asp-route-siteId="@siteId" asp-route-year="@year" asp-route-month="@month">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" id="voidPaymentId" value="" />
    </form>
    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Tarih</th>
                        <th>Daire</th>
                        <th>Tutar</th>
                        <th>Yöntem</th>
                        <th>Açıklama</th>
                        <th width="100"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.PaymentDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td><strong>@(p.Apartment?.BlockOrBuildingName) @(p.Apartment?.ApartmentNumber)</strong></td>
                            <td><strong>@p.Amount.ToString("N2") ₺</strong></td>
                            <td>@p.Method</td>
                            <td>@(p.Description ?? "-")</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-outline-danger" title="Tahsilatı İptal Et" data-payment-id="@p.Id" data-amount="@p.Amount" data-apt="@(p.Apartment?.BlockOrBuildingName) @(p.Apartment?.ApartmentNumber)">
                                    <i class="bi bi-x-circle"></i> İptal
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <p class="text-muted small mt-2">@year @monthNames[month]: Toplam @Model.Count tahsilat</p>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success mt-2">@TempData["Message"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger mt-2">@TempData["Error"]</div>
    }
}
else
{
    <div class="alert alert-info">@year @monthNames[month] ayında tahsilat kaydı yok.</div>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success mt-2">@TempData["Message"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger mt-2">@TempData["Error"]</div>
    }
}
@section Scripts {
<script>
document.querySelectorAll('button[data-payment-id]').forEach(function(btn) {
    btn.addEventListener('click', function() {
        var id = btn.dataset.paymentId;
        var amount = btn.dataset.amount || '';
        var apt = btn.dataset.apt || '';
        if (!confirm('Bu tahsilatı iptal etmek istediğinize emin misiniz?\n\nDaire: ' + apt + '\nTutar: ' + amount + ' ₺\n\nİptal sonrası aidat tekrar tahsil edilebilir.')) return;
        document.getElementById('voidPaymentId').value = id;
        document.getElementById('voidPaymentForm').submit();
    });
});
</script>
}
