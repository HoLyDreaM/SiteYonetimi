@model SiteYonetim.Domain.Entities.Expense
@{
    ViewData["Title"] = "Gider Düzenle";
    var siteId = (Guid)ViewBag.SiteId;
    var year = (int)ViewBag.Year;
    var month = (int)ViewBag.Month;
    var types = ViewBag.ExpenseTypes as IReadOnlyList<SiteYonetim.Domain.Entities.ExpenseType> ?? new List<SiteYonetim.Domain.Entities.ExpenseType>();
}
<h1 class="h3 mb-4">Gider Düzenle</h1>
@if (!ViewData.ModelState.IsValid)
{
    <div asp-validation-summary="All" class="alert alert-danger text-dark mb-3" role="alert"></div>
}
<form asp-area="App" asp-controller="Expenses" asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="SiteId" />
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-12">
                    <label asp-for="ExpenseTypeId" class="form-label">Gider Türü *</label>
                    <select asp-for="ExpenseTypeId" class="form-select" required>
                        <option value="">Seçin</option>
                        @foreach (var t in types)
                        {
                            <option value="@t.Id">@t.Name</option>
                        }
                    </select>
                    <span asp-validation-for="ExpenseTypeId" class="text-danger small"></span>
                </div>
                <div class="col-12">
                    <label asp-for="Description" class="form-label">Açıklama *</label>
                    <input asp-for="Description" class="form-control" required />
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Amount" class="form-label">Tutar (₺) *</label>
                    <input asp-for="Amount" type="number" step="0.01" min="0.01" class="form-control" required />
                    <span asp-validation-for="Amount" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="InvoiceDate" class="form-label">Fatura Tarihi *</label>
                    <input asp-for="InvoiceDate" type="date" class="form-control" required />
                    <span asp-validation-for="InvoiceDate" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="InvoiceNumber" class="form-label">Fatura No (opsiyonel)</label>
                    <input asp-for="InvoiceNumber" class="form-control" />
                </div>
                <div class="col-12">
                    <label asp-for="Status" class="form-label">Ödeme Durumu *</label>
                    <select name="Status" class="form-select">
                        @if (Model.Status == SiteYonetim.Domain.Entities.ExpenseStatus.Paid)
                        {
                            <option value="0">Bekliyor</option>
                            <option value="3" selected>Ödendi</option>
                        }
                        else
                        {
                            <option value="0" selected>Bekliyor</option>
                            <option value="3">Ödendi</option>
                        }
                    </select>
                    <span class="form-text">"Bekliyor" = süresi geçince bildirimde görünür. "Ödendi" = bankadan düşülür.</span>
                </div>
                <div class="col-12">
                    <label class="form-label">Fatura Dosyası (JPG, PDF)</label>
                    @if (Model.Attachments != null && Model.Attachments.Any(a => !a.IsDeleted))
                    {
                        <div class="mb-2">
                            <strong>Mevcut dosyalar:</strong>
                            @foreach (var att in Model.Attachments.Where(a => !a.IsDeleted))
                            {
                                <a href="@att.FilePath" target="_blank" class="d-block"><i class="bi bi-file-earmark me-1"></i>@att.FileName</a>
                            }
                        </div>
                    }
                    <input type="file" name="Fatura" class="form-control" accept=".jpg,.jpeg,.pdf" />
                    <span class="form-text">Yeni dosya eklemek için seçin. JPG veya PDF.</span>
                </div>
            </div>
        </div>
        <div class="card-footer bg-transparent border-0">
            <button type="submit" class="btn btn-primary">Güncelle</button>
            <a asp-action="Index" asp-route-siteId="@siteId" asp-route-year="@year" asp-route-month="@month" class="btn btn-secondary">İptal</a>
        </div>
    </div>
</form>
