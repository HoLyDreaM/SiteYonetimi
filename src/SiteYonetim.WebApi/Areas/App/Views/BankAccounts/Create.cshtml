@model SiteYonetim.Domain.Entities.BankAccount
@{
    ViewData["Title"] = "Yeni Banka Hesabı";
    var siteId = (Guid)ViewBag.SiteId;
    var siteName = ViewBag.SiteName as string ?? "";
}
<h1 class="h3 mb-4">Yeni Banka Hesabı - @siteName</h1>
<form asp-area="App" asp-controller="BankAccounts" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="SiteId" />
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="AccountType" class="form-label">Hesap Türü *</label>
                    <select asp-for="AccountType" class="form-select">
                        <option value="0">Vadesiz</option>
                        <option value="1">Vadeli</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Varsayılan Hesap</label>
                    <div class="form-check mt-2">
                        <input asp-for="IsDefault" class="form-check-input" />
                        <label asp-for="IsDefault" class="form-check-label">Tahsilat ve giderlerde otomatik seçilsin</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <label asp-for="BankName" class="form-label">Banka Adı *</label>
                    <input asp-for="BankName" class="form-control" placeholder="Ziraat Bankası" />
                </div>
                <div class="col-md-6">
                    <label asp-for="BranchName" class="form-label">Şube</label>
                    <input asp-for="BranchName" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="AccountNumber" class="form-label">Hesap Numarası *</label>
                    <input asp-for="AccountNumber" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="IBAN" class="form-label">IBAN</label>
                    <input asp-for="IBAN" class="form-control" maxlength="34" />
                </div>
                <div class="col-md-6">
                    <label asp-for="AccountName" class="form-label">Hesap Adı</label>
                    <input asp-for="AccountName" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="CurrentBalance" class="form-label">Başlangıç Bakiyesi (₺)</label>
                    <input asp-for="CurrentBalance" type="number" step="0.01" class="form-control" value="0" />
                    <span class="form-text">Hesabınızdaki mevcut bakiye. Tahsilatlar eklenir, giderler düşülür.</span>
                </div>
            </div>
        </div>
        <div class="card-footer bg-transparent border-0">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a asp-area="App" asp-controller="BankAccounts" asp-action="Index" asp-route-siteId="@siteId" class="btn btn-secondary">İptal</a>
        </div>
    </div>
</form>
