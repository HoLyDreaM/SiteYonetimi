@model SiteYonetim.Domain.Entities.BankAccount
@{
    ViewData["Title"] = "Banka Hesabı Düzenle";
    var effectiveBalance = ViewBag.EffectiveBalance != null ? Convert.ToDecimal(ViewBag.EffectiveBalance) : Model.CurrentBalance;
}
<h1 class="h3 mb-4">Banka Hesabı Düzenle</h1>
<form asp-area="App" asp-controller="BankAccounts" asp-action="Edit" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="SiteId" />
    <input type="hidden" asp-for="CurrentBalance" />
    <div class="card border-0 shadow-sm mb-3">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h6 class="text-muted mb-1">Güncel Bakiye</h6>
                    <h4 class="mb-0 @(effectiveBalance >= 0 ? "text-success" : "text-danger")">@effectiveBalance.ToString("N2") ₺</h4>
                    <span class="small text-muted">Başlangıç + Tahsilatlar - Giderler</span>
                </div>
            </div>
        </div>
    </div>
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="BankName" class="form-label">Banka Adı *</label>
                    <input asp-for="BankName" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="BranchName" class="form-label">Şube</label>
                    <input asp-for="BranchName" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="AccountNumber" class="form-label">Hesap Numarası *</label>
                    <input asp-for="AccountNumber" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="IBAN" class="form-label">IBAN</label>
                    <input asp-for="IBAN" class="form-control" maxlength="34" />
                </div>
                <div class="col-md-6">
                    <label asp-for="AccountName" class="form-label">Hesap Adı</label>
                    <input asp-for="AccountName" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="OpeningBalance" class="form-label">Başlangıç Bakiyesi (₺)</label>
                    <input asp-for="OpeningBalance" type="number" step="0.01" class="form-control" />
                    <span class="form-text">Hesabı açarken girdiğiniz tutar. Güncel bakiye = Başlangıç + Tahsilatlar - Giderler</span>
                </div>
            </div>
            <hr />
            <div class="row g-3">
                <div class="col-12">
                    <details class="small">
                        <summary class="text-muted" style="cursor:pointer">Mutabakat nedir? (İsteğe bağlı)</summary>
                        <p class="mt-2 text-muted small">Banka ekstrenizdeki bakiye ile sistemdeki bakiye farklıysa (eksik kayıt, hatalı giriş vb.) banka ekstresindeki gerçek bakiyeyi girip "Uygula"ya basın. Sistem başlangıç bakiyesini buna göre düzeltir.</p>
                        <form asp-area="App" asp-controller="BankAccounts" asp-action="Reconcile" method="post" class="d-inline-flex gap-2 align-items-end mt-2">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="siteId" value="@Model.SiteId" />
                            <div>
                                <label class="form-label small">Banka ekstresindeki bakiye (₺)</label>
                                <input type="number" name="realBalance" step="0.01" class="form-control form-control-sm" placeholder="Örn: 23150" style="width: 140px;" />
                            </div>
                            <button type="submit" class="btn btn-sm btn-outline-secondary">Uygula</button>
                        </form>
                    </details>
                </div>
            </div>
        </div>
        <div class="card-footer bg-transparent border-0">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a asp-area="App" asp-controller="BankAccounts" asp-action="Index" asp-route-siteId="@Model.SiteId" class="btn btn-secondary">İptal</a>
        </div>
    </div>
</form>
