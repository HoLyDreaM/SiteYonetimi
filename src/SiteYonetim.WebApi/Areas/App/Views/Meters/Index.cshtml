@model IReadOnlyList<SiteYonetim.Domain.Entities.Meter>
@{
    ViewData["Title"] = "Sayaçlar";
    var siteId = (Guid)ViewBag.SiteId;
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Sayaçlar</h1>
    <div>
        <a asp-area="App" asp-controller="Meters" asp-action="Create" asp-route-siteId="@siteId" class="btn btn-primary"><i class="bi bi-plus-lg me-1"></i> Yeni Sayaç</a>
        <a asp-controller="Sites" asp-action="Index" class="btn btn-outline-secondary">Site Değiştir</a>
    </div>
</div>
@if (Model != null && Model.Count > 0)
{
    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Ad</th>
                        <th>Tür</th>
                        <th>Birim</th>
                        <th>Daire</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model)
                    {
                        <tr>
                            <td><strong>@m.Name</strong></td>
                            <td>@m.Type</td>
                            <td>@(m.Unit ?? "-")</td>
                            <td>@(m.Apartment != null ? m.Apartment.ApartmentNumber : "Ortak")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">Henüz sayaç eklenmemiş. <a asp-area="App" asp-controller="Meters" asp-action="Create" asp-route-siteId="@siteId">Yeni sayaç ekleyin</a> (su, elektrik, doğalgaz vb.).</div>
}
