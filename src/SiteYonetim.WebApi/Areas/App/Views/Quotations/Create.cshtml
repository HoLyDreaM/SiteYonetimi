@model SiteYonetim.Domain.Entities.Quotation
@{
    ViewData["Title"] = "Yeni Teklif";
    var siteId = ViewBag.SiteId as Guid? ?? Model.SiteId;
}
<h1 class="h3 mb-4">Yeni Teklif</h1>
<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
<form asp-area="App" asp-controller="Quotations" asp-action="Create" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="SiteId" />
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-12">
                    <label asp-for="CompanyName" class="form-label">Teklifi Veren Firma *</label>
                    <input asp-for="CompanyName" class="form-control" placeholder="Firma adı" />
                    <span asp-validation-for="CompanyName" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="QuotationDate" class="form-label">Teklif Tarihi *</label>
                    <input asp-for="QuotationDate" type="date" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Dosya (PDF, Word, Excel vb.)</label>
                    <input name="Dosya" type="file" class="form-control" accept=".pdf,.doc,.docx,.xls,.xlsx" />
                </div>
                <div class="col-md-6">
                    <label asp-for="MonthlyFee" class="form-label">Teklif Ücreti Aylık (₺)</label>
                    <input asp-for="MonthlyFee" type="number" step="0.01" class="form-control" placeholder="0" />
                </div>
                <div class="col-md-6">
                    <label asp-for="YearlyFee" class="form-label">Teklif Ücreti Yıllık (₺)</label>
                    <input asp-for="YearlyFee" type="number" step="0.01" class="form-control" placeholder="0" />
                </div>
                <div class="col-12">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Teklif hakkında notlar"></textarea>
                </div>
            </div>
        </div>
        <div class="card-footer bg-transparent border-0">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a asp-action="Index" asp-route-siteId="@siteId" class="btn btn-secondary">İptal</a>
        </div>
    </div>
</form>
