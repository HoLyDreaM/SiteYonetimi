@model IReadOnlyList<SiteYonetim.Domain.Entities.ImportantPhone>
@{
    ViewData["Title"] = "Önemli Telefonlar";
    var siteId = (Guid)ViewBag.SiteId;
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Önemli Telefon Numaraları</h1>
    <div>
        <a asp-area="App" asp-controller="ImportantPhones" asp-action="Create" asp-route-siteId="@siteId" class="btn btn-primary"><i class="bi bi-plus-lg me-1"></i> Yeni Numara</a>
        <a asp-area="App" asp-controller="Sites" asp-action="Index" class="btn btn-outline-secondary">Site Değiştir</a>
    </div>
</div>
@if (Model != null && Model.Count > 0)
{
    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>İsim</th>
                        <th>Telefon</th>
                        <th>Ek Bilgi</th>
                        <th width="180"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td><strong>@p.Name</strong></td>
                            <td><a href="tel:@p.Phone">@p.Phone</a></td>
                            <td>@(p.ExtraInfo ?? "-")</td>
                            <td>
                                <a asp-area="App" asp-controller="ImportantPhones" asp-action="Edit" asp-route-id="@p.Id" asp-route-siteId="@siteId" class="btn btn-sm btn-outline-primary">Düzenle</a>
                                <form asp-area="App" asp-controller="ImportantPhones" asp-action="Delete" asp-route-id="@p.Id" asp-route-siteId="@siteId" method="post" class="d-inline" onsubmit="return confirm('Bu numarayı silmek istediğinize emin misiniz?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">Henüz önemli telefon eklenmemiş. <a asp-area="App" asp-controller="ImportantPhones" asp-action="Create" asp-route-siteId="@siteId">İlk numarayı ekleyin</a> (Acil, Yönetim, Güvenlik vb.).</div>
}
