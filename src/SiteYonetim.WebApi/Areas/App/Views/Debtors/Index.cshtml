@model IReadOnlyList<SiteYonetim.Domain.Interfaces.DebtorDto>
@{
    ViewData["Title"] = "Borçlular";
    var siteId = (Guid)ViewBag.SiteId;
    var totalDebt = ViewBag.TotalDebt as decimal? ?? 0;
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Borçlular</h1>
    <a asp-area="App" asp-controller="Sites" asp-action="Index" class="btn btn-outline-secondary">Site Değiştir</a>
</div>
@if (totalDebt > 0)
{
    <div class="alert alert-warning mb-3">
        <strong>Toplam tahsil edilmemiş aidat/ek toplama borcu:</strong> @totalDebt.ToString("N2") ₺
    </div>
}
@if (Model != null && Model.Count > 0)
{
    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Blok / Bina</th>
                        <th>Daire No</th>
                        <th>Malik / İletişim</th>
                        <th>Telefon</th>
                        <th>Borç Tarihi</th>
                        <th>Gecikme</th>
                        <th>Aidat / Ek Toplama Borcu</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model)
                    {
                        <tr>
                            <td>@d.BlockOrBuildingName</td>
                            <td><strong>@d.ApartmentNumber</strong></td>
                            <td>@(d.OwnerName ?? "-")</td>
                            <td>@(d.OwnerPhone ?? "-")</td>
                            <td>@(d.OldestDebtDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                            <td>@(d.DaysOverdue.HasValue ? $"{d.DaysOverdue} gün gecikmiş" : "-")</td>
                            <td><strong class="text-danger">@d.UnpaidIncome.ToString("N2") ₺</strong></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-success">Bu sitede borcu bulunan daire yok.</div>
}
