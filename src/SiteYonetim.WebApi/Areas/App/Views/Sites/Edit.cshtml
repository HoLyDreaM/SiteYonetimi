@model SiteYonetim.Domain.Entities.Site
@{
    ViewData["Title"] = "Site Düzenle";
}
<h1 class="h3 mb-4">Site Düzenle</h1>
<form asp-area="App" asp-controller="Sites" asp-action="Edit" asp-route-id="@Model.Id" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-12">
                    <label asp-for="Name" class="form-label">Site Adı *</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                <div class="col-12">
                    <label asp-for="Address" class="form-label">Adres</label>
                    <input asp-for="Address" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="City" class="form-label">Şehir</label>
                    <input asp-for="City" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="District" class="form-label">İlçe</label>
                    <input asp-for="District" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="TaxOffice" class="form-label">Vergi Dairesi</label>
                    <input asp-for="TaxOffice" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="TaxNumber" class="form-label">Vergi No</label>
                    <input asp-for="TaxNumber" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="LateFeeRate" class="form-label">Gecikme Zammı (%)</label>
                    <input asp-for="LateFeeRate" type="number" step="0.01" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="LateFeeDay" class="form-label">Zam Uygulama (Gün)</label>
                    <input asp-for="LateFeeDay" type="number" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="DefaultMonthlyDues" class="form-label">Varsayılan Aylık Aidat (₺)</label>
                    <input asp-for="DefaultMonthlyDues" type="number" step="0.01" class="form-control" />
                    <span class="form-text">Dairede ayrıca belirtilmezse bu tutar (pay oranına göre) kullanılır.</span>
                </div>
                <div class="col-md-3">
                    <label asp-for="DefaultPaymentStartDay" class="form-label">Aidat Ödeme Başlangıç Günü</label>
                    <input asp-for="DefaultPaymentStartDay" type="number" min="1" max="28" class="form-control" />
                    <span class="form-text">Örn: 1 = ayın 1'i</span>
                </div>
                <div class="col-md-3">
                    <label asp-for="DefaultPaymentEndDay" class="form-label">Aidat Ödeme Bitiş Günü</label>
                    <input asp-for="DefaultPaymentEndDay" type="number" min="1" max="28" class="form-control" />
                    <span class="form-text">Örn: 20 = ayın 20'si</span>
                </div>
                <div class="col-12">
                    <div class="form-check">
                        <input asp-for="HasMultipleBlocks" class="form-check-input" />
                        <label asp-for="HasMultipleBlocks" class="form-check-label">Birden fazla blok var</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-transparent border-0">
            <button type="submit" class="btn btn-primary">Güncelle</button>
            <a asp-area="App" asp-controller="Sites" asp-action="Index" class="btn btn-secondary">İptal</a>
        </div>
    </div>
</form>
