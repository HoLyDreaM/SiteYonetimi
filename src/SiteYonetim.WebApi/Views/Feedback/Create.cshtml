@model SiteYonetim.WebApi.Controllers.FeedbackInputModel
@{
    ViewData["Title"] = "Öneri / Şikayet";
    Layout = null;
    var siteId = ViewBag.SiteId as Guid?;
    var siteName = ViewBag.SiteName as string ?? "";
    var success = ViewBag.Success as bool? ?? false;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @siteName</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow border-0">
                    <div class="card-body p-4">
                        <h4 class="card-title mb-3"><i class="bi bi-chat-left-text me-2"></i>Öneri / Şikayet - @siteName</h4>
                        @if (success)
                        {
                            <div class="alert alert-success">Talebiniz alındı. En kısa sürede değerlendirilecektir.</div>
                        }
                        else
                        {
                            <form method="post" asp-action="Create" asp-controller="Feedback">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="SiteId" value="@Model.SiteId" />
                                <div asp-validation-summary="All" class="text-danger small mb-2"></div>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Blok No / Bina</label>
                                        <input name="BlockOrBuildingName" class="form-control" value="@Model.BlockOrBuildingName" placeholder="A Blok" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Daire No</label>
                                        <input name="ApartmentNumber" class="form-control" value="@Model.ApartmentNumber" placeholder="1" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">İsim Soyisim *</label>
                                        <input name="ContactName" class="form-control" value="@Model.ContactName" required />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Telefon</label>
                                        <input name="ContactPhone" type="tel" class="form-control" value="@Model.ContactPhone" />
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label">Konu *</label>
                                        <input name="Subject" class="form-control" value="@Model.Subject" placeholder="Kısa başlık" required />
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label">Konu Başlığı</label>
                                        <select name="TopicType" class="form-select">
                                            <option value="Suggestion" selected="@(Model.TopicType == "Suggestion")">Öneri</option>
                                            <option value="Complaint" selected="@(Model.TopicType == "Complaint")">Şikayet</option>
                                        </select>
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label">Açıklama *</label>
                                        <textarea name="Message" class="form-control" rows="4" required>@Model.Message</textarea>
                                    </div>
                                    <div class="col-12">
                                        <button type="submit" class="btn btn-primary"><i class="bi bi-send me-1"></i>Gönder</button>
                                    </div>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
