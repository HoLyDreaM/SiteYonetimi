@model SiteYonetim.WebApi.Controllers.DestekInputModel
@{
    ViewData["Title"] = "Destek Kaydı";
    Layout = null;
    var siteId = ViewBag.SiteId as Guid?;
    var siteName = ViewBag.SiteName as string ?? "";
    var success = ViewBag.Success as bool? ?? false;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @siteName</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow border-0">
                    <div class="card-body p-4">
                        <h4 class="card-title mb-3"><i class="bi bi-headset me-2"></i>Destek Kaydı - @siteName</h4>
                        @if (success)
                        {
                            <div class="alert alert-success">Kaydınız alındı. En kısa sürede değerlendirilecektir.</div>
                        }
                        else
                        {
                            <form method="post" enctype="multipart/form-data" asp-action="Create" asp-controller="Destek">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="SiteId" value="@Model.SiteId" />
                                <div asp-validation-summary="All" class="text-danger small mb-2"></div>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">İsim Soyisim *</label>
                                        <input name="ContactName" class="form-control" value="@Model.ContactName" required placeholder="Adınız Soyadınız" />
                                        @if (ViewBag.IsAuthenticated == true)
                                        {
                                            <span class="form-text">Üyelik bilginizden alınır</span>
                                        }
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">E-posta @(ViewBag.IsAuthenticated != true ? "*" : "")</label>
                                        <input name="ContactEmail" type="email" class="form-control" value="@Model.ContactEmail" placeholder="iletisim@ornek.com" @(ViewBag.IsAuthenticated != true ? "required" : "") />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Telefon</label>
                                        <input name="ContactPhone" type="tel" class="form-control" value="@Model.ContactPhone" placeholder="İletişim için" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Blok Numarası</label>
                                        <input name="BlockNumber" class="form-control" value="@Model.BlockNumber" placeholder="A Blok" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Kat Numarası</label>
                                        <input name="FloorNumber" type="number" class="form-control" value="@Model.FloorNumber" placeholder="1" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Daire Numarası</label>
                                        <input name="ApartmentNumber" class="form-control" value="@Model.ApartmentNumber" placeholder="1, 2-A vb." />
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label">Konu Başlığı *</label>
                                        <input name="Subject" class="form-control" value="@Model.Subject" placeholder="Kısa başlık" required />
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label">Tür</label>
                                        <select name="TopicType" class="form-select">
                                            <option value="Suggestion" selected="@(Model.TopicType == "Suggestion")">Öneri</option>
                                            <option value="Request" selected="@(Model.TopicType == "Request")">İstek</option>
                                            <option value="Complaint" selected="@(Model.TopicType == "Complaint")">Şikayet</option>
                                        </select>
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label">Açıklama *</label>
                                        <textarea name="Message" class="form-control" rows="4" required>@Model.Message</textarea>
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label">Resim (opsiyonel)</label>
                                        <input name="Resim" type="file" class="form-control" accept="image/*" />
                                    </div>
                                    <div class="col-12">
                                        <button type="submit" class="btn btn-primary"><i class="bi bi-send me-1"></i>Gönder</button>
                                    </div>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
